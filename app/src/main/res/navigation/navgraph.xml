<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/before2Fragment">

    <fragment
        android:id="@+id/registroFragment"
        android:name="com.ejercicios.formulariologin.fragments.RegistroFragment"
        android:label="registro_fragment"
        tools:layout="@layout/registro_fragment" >
        <action
            android:id="@+id/action_registroFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ejercicios.formulariologin.fragments.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ejercicios.formulariologin.fragments.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" />
    <fragment
        android:id="@+id/before2Fragment"
        android:name="com.ejercicios.formulariologin.fragments.Before2Fragment"
        android:label="before2_fragment"
        tools:layout="@layout/before2_fragment">
        <action
            android:id="@+id/action_before2Fragment_to_registroFragment"
            app:destination="@id/registroFragment" />
        <action
            android:id="@+id/action_before2Fragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>